pipeline {
    agent any

    stages {
        stage('List files') {
            steps {
                sh '''
                ls
                pwd
                '''
            }
        }
        stage('Docker build') {
            steps {
                sh '''
                    docker build . -t nodejsapp:feature
                '''
            }
        }
        stage('Docker Run') {
            steps {
                sh '''
                    docker run --name mynode_f -d -p 7075:7075 nodejsapp:feature
                '''
            }
        }
        stage('Manual Intervention') {
            steps {
                script {
                    def userInput = input(
                        id: 'userInput',
                        message: 'Do you want to stop the container?',
                        parameters: [
                            choice(choices: ['Yes', 'No'], description: 'Select Yes or No', name: 'STOP_CONTAINER')
                        ]
                    )

                    if (userInput == 'Yes') {
                        sh 'docker rm -f mynode_f'
                    } else {
                        echo 'Skipping container stop'
                    }
                }
            }
        }
    }
}
