pipeline {
    agent any

    stages {
        stage('List files') {
            steps {
                sh '''
                ls
                pwd
                '''
            }
        }
        stage('Docker build') {
            steps {
                sh '''
                    docker build . -t nodejsapp:v1
                '''
            }
        }
        stage('Docker Run') {
            steps {
                sh '''
                    docker run -d -p 7070:7070 nodejsapp:v1
                '''
            }
        }
    }
}
